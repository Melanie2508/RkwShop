config {
    doctype = html5
    xmlprologue = none

    inlineStyle2TempFile = 0
    removeDefaultJS = 0
    compressJs = 0
    concatenateJs = 0
    compressCss = 0
    concatenateCss = 0

    no_cache = 1
    debug = 0
    xhtml_cleaning = 0
    admPanel = 0
    disableAllHeaderCode = 1
    sendCacheHeaders = 0
    absRefPrefix = /
    contentObjectExceptionHandler = 0

    language = de
}

page = PAGE
page {
    10 = TEXT
    10.value = Hallo Welt!
    20 = USER
    20 {
        userFunc = TYPO3\CMS\Extbase\Core\Bootstrap->run
        extensionName = RkwShop
        pluginName = ProductList
        vendorName = RKW
        controller = Product
        switchableControllerActions {
            // Again: Controller-Name and Action
            Product {
                1 = list
            }
        }
    }
}

plugin.tx_rkwshop  {

    view {
        # cat=plugin.tx_rkwshop/file; type=string; label=Path to template root (FE)
        templateRootPaths.0 = EXT:rkw_shop/Resources/Private/Templates/
        # cat=plugin.tx_rkwshop/file; type=string; label=Path to template partials (FE)
        partialRootPaths.0 = EXT:rkw_shop/Resources/Private/Partials/
        # cat=plugin.tx_rkwshop/file; type=string; label=Path to template layouts (FE)
        layoutRootPaths.0 = EXT:rkw_shop/Resources/Private/Layouts/
    }

    persistence {
        // cat=plugin.tx_rkwshop_rkwshop//a; type=string; label=Default storage PID
        storagePid = 1
    }

    settings {

        # cat=plugin.tx_rkwshop/a; type=boolean; label=Disable admin mails?
        disableAdminMails = 0

        # cat=plugin.tx_rkwshop//a; type=integer; label=Username of BE-User if none is set in plugin
        fallbackBackendUserForAdminMails = fallback

        accountPid = 1

    }
}